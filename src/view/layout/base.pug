doctype html
html(lang="ko")
    head
        include _meta
        link(rel="stylesheet", href="/static/css/ggantt.css")
        title= siteName
    if toast
        - var toastEnable = true;
    body(data-theme="auto", data-toast=toastEnable)
        include _header
        include _toast
        block contents
        include _footer
        script(src="/static/js/ggantt.js")
        block scripts
